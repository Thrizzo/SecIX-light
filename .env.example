# =============================================================================
# SecIX Light - Environment Configuration
# =============================================================================

# Database Configuration
POSTGRES_USER=postgres
POSTGRES_PASSWORD=secix_light_password
POSTGRES_DB=secix_light

# Edition (always light for this distribution)
VITE_EDITION=light
RUNTIME_EDITION=light

# Deployment Mode
VITE_DEPLOYMENT_MODE=docker

# AI Provider Configuration
# Options: ollama, openai
AI_PROVIDER=ollama

# Ollama Configuration (if AI_PROVIDER=ollama)
OLLAMA_BASE_URL=http://ollama:11434
OLLAMA_MODEL=llama3.2

# OpenAI Configuration (if AI_PROVIDER=openai)
# OPENAI_API_KEY=sk-...
# OPENAI_MODEL=gpt-4o-mini

# JWT Secret (CHANGE IN PRODUCTION!)
JWT_SECRET=your-jwt-secret-change-in-production

# Port Configuration
DB_PORT=5432
API_PORT=3001
FRONTEND_PORT=80
OLLAMA_PORT=11434
